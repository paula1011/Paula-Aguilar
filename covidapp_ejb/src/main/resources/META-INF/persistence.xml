<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="covida.APP_mysql">
	<provider>org.hibernate.ejb.HibernatePersistence</provider>
	<jta-data-source>java:jboss/env/jdbc/covidapp</jta-data-source>
	<class>covid.APP_mysql.model.Ciudade</class>
	  <class>covid.APP_mysql.model.Decreto</class>
		<class>covid.APP_mysql.model.Departamento</class>
		<class>covid.APP_mysql.model.EmpresasLogin</class>
		<class>covid.APP_mysql.model.Empresa</class>
		<class>covid.APP_mysql.model.Enfermedade</class>
		<class>covid.APP_mysql.model.HistoricosDecreto</class>
		<class>covid.APP_mysql.model.Login</class>
		<class>covid.APP_mysql.model.Persona</class>
		<class>covid.APP_mysql.model.Registro</class>
		<class>covid.APP_mysql.model.TiposDocumento</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
		<properties>
		   <property name="hibernate.connection.driver_class" 
		   value="com.mysql.jdbc.Driver"/>
		   <property name="hibernate_dialect"
		    value="org.hibernate.dialect.MySQLDialect"/>
		</properties>
	</persistence-unit>
	<persistence-unit name="postgreSQL">
	<provider>org.hibernate.ejb.HibernatePersistence</provider>
	<jta-data-source>java:jboss/env/jdbc/covidAppPostgres</jta-data-source>
		<class>com.postgreSQL.model.Ciudade</class>
		<class>com.postgreSQL.model.Decreto</class>
		<class>com.postgreSQL.model.Departamento</class>
		<class>com.postgreSQL.model.Empresa</class>
		<class>com.postgreSQL.model.EmpresasLogin</class>
		<class>com.postgreSQL.model.Enfermedade</class>
		<class>com.postgreSQL.model.HistoricosDecreto</class>
		<class>com.postgreSQL.model.Login</class>
		<class>com.postgreSQL.model.Persona</class>
		<class>com.postgreSQL.model.Registro</class>
		<class>com.postgreSQL.model.TiposDocumento</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<shared-cache-mode>ENABLE_SELECTIVE</shared-cache-mode>
		<properties>
		   <property name="hibernate.connection.driver_class"
		    value="com.postgresql.Driver"/>
		   <property name="hibernate_dialect" 
		   value="org.hibernate.dialect.PostgreSQL82Dialect"/>
		</properties>
	</persistence-unit>
</persistence>
